<section class="content">
	<div class="post-content">
		<h3><%= @post.title %></h3>
		<p><%= @post.created_at %></p>
		<p><%= markdown @post.body  %></p>
	</div>
	<div class="comments">
		<%= form_for [@post, @comment] do |f| %>
			<%= f.label :email %>
			<%= f.text_field :email %>
			<%= f.label :nick %>
			<%= f.text_field :nick %>
			<%= f.label :body %>
			<%= f.text_area :body %>
			<%= f.hidden_field :name, :value => '' %>
			<%= f.submit %>
		<% end %>
		<% @post.comments.each do |comment| %>
			<div class="comment">
				<%= comment.nick %>
				<%= comment.created_at.strftime('%B %d %Y, %H:%M') %>
				<%= comment.body %>
			</div>
		<% end %>
	</div>

	<script>
	setTimeout(function() {
		$('#comment_name').val('frodolives');
	}, 5000);
	</script>

</section>

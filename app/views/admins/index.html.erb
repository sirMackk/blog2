<section class="content">
	<%= link_to 'New Post', new_post_path %>
	<%= paginate @posts %>
	<table>
		<thead>
			<th>ID</th>
			<th>Title</th>
			<th>Created at</th>
			<th>Modified at</th>
			<th>Options</th>
		</thead>
		<tbody>
			<% @posts.each do |post| %>
				<tr>
					<td><%= post.id %></td>
					<td><%= post.title %></td>
					<td><%= post.created_at.strftime('%B %d %Y') %></td>
					<td><%= post.updated_at.strftime('%B %d %Y') %></td>
					<td><%= link_to 'edit', edit_post_url(post) %> // 
						<%= link_to 'delete', post, :method => :delete, :confirm => "Are you sure you want to delete post #{post.id} ?" %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

</section>

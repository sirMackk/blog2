<section class="content">
	<div class="post-content">
		<h3><%= @post.title %></h3>
		<p><%= @post.created_at %></p>
		<p><%= markdown @post.body  %></p>
	</div>
	<div class="comments">
		<% @post.comments.each do |comment| %>
			<div class="comment">
				<%= comment.email %>
				<%= comment.nick %>
				<%= comment.created_at.strftime('%B %d %Y, %H:%M') %>
				<%= comment.body %>
				<%= link_to 'Delete', post_comment_path(@post.id, comment.id), :method => :delete, :confirm => 'Are you sure you want to delete this comment?' %>
			</div>
		<% end %>
	</div>

</section>
